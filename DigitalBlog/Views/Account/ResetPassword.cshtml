@model ChangePsw

@{
    ViewData["title"] = "Change Password";
}

<div class="max-w-md mx-auto">
    <form asp-action="ChangePassword">
        <div class="text-red-800" asp-validation-summary="ModelOnly"></div>

        <div class="relative mb-3">
            <label asp-for="UserId" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
            <input asp-for="UserId" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="" />

            <span asp-validation-for="UserId" class="text-red-800"></span>
        </div>

        <div class="relative mb-3">
            <label asp-for="NewPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
            <input asp-for="NewPassword" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="" />
            <span asp-validation-for="NewPassword" class="text-red-800"></span>
        </div>

        <div class="relative mb-3">
            <label asp-for="ConfirmPassword" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white"></label>
            <input asp-for="ConfirmPassword" class="bg-gray-50 border border-gray-300 text-gray-900 rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" required="" />
            <span asp-validation-for="ConfirmPassword" class="text-red-800"></span>
        </div>

        <div class="my-3">
            <input type="submit" value="Save" class="w-full text-white bg-blue-500 hover\:bg-blue-700 py-3 px-5 rounded-lg" />
        </div>

    </form>

</div>