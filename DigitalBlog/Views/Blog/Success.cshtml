@model string

@{
    ViewData["Title"] = Model;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-3">
            <div class="col-sm-6 mt-5">
                <div class="card bd-danger p-5 shadow">
                    <div class="text-center text-danger">
                        <h1>@Model.ToString()</h1>
                        <a asp-action="Index" class="btn btn-action">Go Back</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>